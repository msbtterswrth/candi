{% extends 'paragraph.html.twig' %}
{% block content %}
{% set color = paragraph.field_background_color.value %}
{% if color is not empty %}
    {% set bg = color ~ 'has-bg'%}
{% endif %}
{% set layout = paragraph.field_layout.value %}
{% set gutter = paragraph.field_gutter_size.value %}
<div class="layout {{bg}}">
    <div class="container">
      <div class="item-grid">
        <h2>{{ content.field_title.0 }}</h2>
        <div class="body-text">{{ content.field_blurb }}</div>
        <div class="clearfix grid normal {{layout}}">
            {{content.field_items}}
        </div>
      </div>
  </div>
</div>
{% endblock %}